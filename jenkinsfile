pipeline {
    agent any

    stages {
        stage('Checkout Git') {
            steps {
                echo 'Pulling...'
                git branch: 'stock-nourchene',
                url: 'https://github.com/JihedMelki7/Groupe3_Achat.git'
            }
        }

        stage('Clean') {
            steps {
                script {
                    // Clean the project
                    sh 'mvn clean'
                }
            }
        }

        stage('Compile') {
            steps {
                script {
                    // Compile the project
                    sh 'mvn compile'
                }
            }
        }
        
        
        stage('SonarQube Analysis') {
           steps {
             withSonarQubeEnv('sonarqube') {
               sh "mvn sonar:sonar"
             }
            }
        }
       stage('Unit Tests') {
          steps {
          sh 'mvn test'  
                }
          }
stage ('NEXUS ') {
       steps {
       sh 'mvn deploy -DskipTests'
        
      }
    }
 stage('BUILD IMAGE'){
      steps{
        sh 'docker build -t achat:1-0 . '
      }
    }
 stage('PUSH IMAGE'){
      steps{
        sh "docker login -u nourchenebouarada -p Nourchene17102021 "
        sh " docker tag achat:1-0 nourchenebouarada/achat:1-0"
        sh " docker push nourchenebouarada/achat:1-0"
      }
    }
stage('DOCKER COMPOSE'){
      steps{
        sh 'docker compose up -d '
      }
    }

        
    }

   
}
